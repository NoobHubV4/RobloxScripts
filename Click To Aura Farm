local lib = loadstring(Game:HttpGet("https://raw.githubusercontent.com/NoobHubV1/NoobHubV1/main/Wizard%20Lib.lua"))()
local autoClick
local RE = game.ReplicatedStorage.src.Packages.Knit.Services.GameService.RE
local Mode = "Perfect"
local Window = lib:NewWindow("Click To Aura Farm")
local Section = Window:NewSection("Main")
function HandleClick()
  if Mode == "Miss" then
   RE.HandleClick:FireServer(1)
  elseif Mode == "Normal" then
   RE.HandleClick:FireServer(2)
  elseif Mode == "Perfect" then
   RE.HandleClick:FireServer(3)
  end
end
Section:CreateDropdown("Mode", {"Miss","Normal","Perfect"}, 1, function(select)
  Mode = select
end)
Section:CreateToggle("Auto Click", function(state)
  autoClick = state
  if autoClick then
    repeat game.RunService.Heartbeat:Wait() HandleClick() until not autoClick
  end
end)
