local lib = loadstring(Game:HttpGet("https://raw.githubusercontent.com/NoobHubV1/NoobHubV1/main/Wizard%20Lib.lua"))()
local autoRespawn, autoRoll
local LocalPlayer = game.Players.localPlayer
local Window = lib:NewWindow("Slap RNG")
local Section = Window:NewSection("Main")
local SavedPositions = CFrame.new(1, -18, 7)
function LoadChar()
  game.ReplicatedStorage.RemoteEvents.ReloadCharacter:FireServer()
end
Section:CreateToggle("Auto Roll", function(state)
  autoRoll = state
end)
Section:CreateToggle("Auto Respawn", function(state)
  autoRespawn = state
end)
spawn(function()
  task0 = function()
    if autoRoll then
      game.ReplicatedStorage.RemoteFunctions.Roll:InvokeServer()
    end
  end
  while task.wait() do
    task.spawn(task0)
  end
end)
LocalPlayer.CharacterAdded:Connect(function(newChar)
  repeat game.RunService.RenderStepped:Wait() until newChar
  newChar:WaitForChild("Head")
  newChar:WaitForChild("HumanoidRootPart")
  newChar:WaitForChild("Humanoid").Died:Connect(function()
    if autoRespawn then
      LoadChar()
    end
  end)
  if SavedPositions then
    for i = 1, 4 do
      task.wait(); newChar.HumanoidRootPart.CFrame = SavedPositions
    end
    SavedPositions = nil
  end
end)
LoadChar()
